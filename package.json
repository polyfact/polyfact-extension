{
  "name": "polyfact-extension",
  "displayName": "Polyfact Extension",
  "description": "VS Code extension developed for efficient code comment management. It integrates with the Polyfact API and supports multiple programming languages.",
  "version": "0.0.6",
  "publisher": "Polyfactdocs",
  "license": "MIT",
  "icon": "icons/icon.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/polyfact/polyfact-extension.git"
  },
  "activationEvents": [
    "onCommand:polyfact-extension.commentFunctions"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "polyfact-extension.commentFunctions",
        "title": "Polyfact Extension"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "polyfact-extension.commentFunctions",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Polyfact Extension",
      "properties": {
        "polyfact-extension.accessToken": {
          "type": "string",
          "default": "",
          "description": "Access token for Polyfact Extension."
        },
        "polyfact-extension.mode": {
          "type": "string",
          "default": "normal",
          "enum": [
            "light",
            "normal",
            "detailed"
          ],
          "description": "Select the level of detail for the block comments that Polyfact extension should generate. 'Light' for minimal comments, 'Normal' for moderate detail, and 'Reinforced' for the most detailed comments."
        }
      }
    },
    "keybindings": [
      {
        "command": "polyfact-extension.commentFunctions",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/sinon": "^10.0.15",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "langchain": "^0.0.102",
    "sinon": "^15.2.0"
  }
}
